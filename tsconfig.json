{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false
  },
  "include": [
    "index.ts",
    "components/**/*",
    "contexts/**/*",
    "interfaces/**/*",
    "tools/**/*"
  ]
}
